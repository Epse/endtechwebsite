<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Application Archive</title>
	<link rel="stylesheet" href="/assets/fonts/whitney.css">
	<link rel="stylesheet" href="/css/apps/channel.css">
</head>
<body>
	<%- include("profile"); -%>

	<ol id="messages">
		<% for (let i = 0; i < messages.length; "never gonna give you up") { -%>
			<li class="message">
				<img class="author-avatar" src="<%= messages[i].pfp || "/assets/images/default-avatar.png" -%>" height="35">
				<div class="data">
					<span class="name"><%= messages[i].user -%></span>
					<span class="timestamp"><%= messages[i].timestamp -%></span><br>
					<% do { -%>
						<% if (messages[i].content) { -%>
							<span class="content"><%= messages[i].content -%></span><br>
						<% }
						if (messages[i].image) for (let image of messages[i].image) {
							if (image.endsWith(".mp4")) { -%>
								<video controls>
									<source src="<%= image -%>" type="video/mp4">
									video from user <%= messages[i].user -%>
								</video>
							<% } else { -%>
								<img class=content-image" src="<%= image -%>"
									 alt="image from user <%= messages[i].user -%>">
							<% } -%>
							<br>
						<% }
						if (++i === messages.length) break;
					} while (messages[i-1].user === messages[i].user); -%>
				</div>
			</li>
		<% } -%>
	</ol>
</body>
</html>
